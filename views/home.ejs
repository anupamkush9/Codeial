
<h1>Codial/ <%= title %></h1>

<section id="feed-posts">
        <% if(locals.user){ %>
        <h4>Posts</h4>
        <form action="/posts/create" id="new-post-form" method="post">
                <textarea name="content" id="" cols="30" rows="10" placeholder="Type here...." required></textarea>
                <input type="submit" value="Post">
        </form>
        <% } %>
</section>
<h1>Posts</h1>

<ul>
<% for( let i = 0; i<posts.length; i++){%>
        <!-- Displaying posts -->
        <li><p><%= posts[i].content %> <br>
       <small> <%= posts[i].user.name %> 
        <% if(locals.user && posts[i].user.id == locals.user.id){ %>
                 <a href="/posts/destroy/<%=posts[i].id%>">Delete</a>
         <% } %>
        </small></p></li>
       <!-- Displaying post comments -->
       <div class="post-comment-list">
        <ul>
                <% for(cmt of posts[i].comments){ %>
                        <li><p><%= cmt.content %></p>
                        <small><%= cmt.user.name %> 
                               <% if(locals.user && cmt.user.id == locals.user.id){ %> <a href="/comments/destroy/<%=cmt.id%>">Delete</a><% } %></small></li>
                <% } %>
        </ul>
       </div>
       <!-- Displaying form to post comments -->
        <div class="post-comments">
                <% if(locals.user){ %>
                        <form action="/comments/create" method="post">
                                <textarea type="text" name="content" id="" cols="25" rows="5" placeholder="type comment ..." required></textarea>
                                <input type="hidden" name="post" value="<%= posts[i]._id %>">
                                <input type="submit" value="Add Comment">
                        </form>
                <% } %>
        </div>
<% } %>
</ul>
